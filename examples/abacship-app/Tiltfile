local_resource(
    "opentdf-abacship-backend",
    cmd = "./backend_server/setup_venv.sh",
    serve_cmd = "cd backend_server/src && \
    source ./venv/bin/activate && \
    python3 -m uvicorn main:app --reload --port 4060",
    labels="abacship",
    resource_deps = ["keycloak-bootstrap"],
    allow_parallel=True
)

